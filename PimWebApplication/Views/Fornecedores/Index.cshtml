@model IEnumerable<PimWebApplication.Models.Fornecedor>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1 style="color: #347928;">Fornecedores</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn" style="background-color: #347928; color: white;">Adicionar Novo Fornecedor</a>
</p>

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                <label for="Nome">Nome do Fornecedor</label>
            </th>
            <th>
                <label for="Endereco">Endereço</label>
            </th>
            <th>
                <label for="Telefone">Telefone</label>
            </th>
            <th>
                <label for="Email">Email</label>
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Ver Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
