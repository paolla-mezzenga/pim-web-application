@model PimWebApplication.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Fornecedor";
}

<h1 style="color: #347928;">Deletar Fornecedor</h1>

<h3>Tem certeza de que deseja excluir este fornecedor?</h3>
<div>
    <h4>Detalhes do Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Deletar" class="btn btn-danger" style="font-weight: bold;" />
            <a asp-action="Index" class="btn btn-secondary" style="font-weight: bold;">Voltar para a Lista</a>
        </div>
    </form>
</div>
