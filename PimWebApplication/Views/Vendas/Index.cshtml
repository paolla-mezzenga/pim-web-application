@model IEnumerable<PimWebApplication.Models.Vendas>

@{
    ViewData["Title"] = "Lista de Vendas";
}

<h1 style="color: #347928;">Vendas</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn" style="background-color: #347928; color: white;">Adicionar Nova Venda</a>
</p>

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                <label for="NomeProduto">Nome do Produto</label>
            </th>
            <th>
                <label for="DataVenda">Data da Venda</label>
            </th>
            <th>
                <label for="QtdVendida">Quantidade Vendida</label>
            </th>
            <th>
                <label for="PrecoUnitario">Preço Unitário</label>
            </th>
            <th>
                <label for="Cliente">Cliente</label>
            </th>
            <th>
                <label for="PrecoTotal">Preço Total</label>
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NomeProduto)</td>
                <td>@item.DataVenda.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.QtdVendida)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecoUnitario)</td>
                <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecoTotal)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Ver Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
