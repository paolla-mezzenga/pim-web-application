@model PimWebApplication.Models.Vendas

@{
    ViewData["Title"] = "Criar Venda";
}

<h1 style="color: #347928;">Criar Venda</h1>

<h4>Vendas</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="NomeProduto" class="control-label" style="font-weight: bold;">Nome do Produto:</label>
                <input asp-for="NomeProduto" class="form-control" />
                <span asp-validation-for="NomeProduto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataVenda" class="control-label" style="font-weight: bold;">Data da Venda:</label>
                <input asp-for="DataVenda" class="form-control" type="date" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QtdVendida" class="control-label" style="font-weight: bold;">Quantidade Vendida:</label>
                <input asp-for="QtdVendida" class="form-control" />
                <span asp-validation-for="QtdVendida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecoUnitario" class="control-label" style="font-weight: bold;">Preço Unitário:</label>
                <input asp-for="PrecoUnitario" class="form-control" />
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente" class="control-label" style="font-weight: bold;">Cliente:</label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecoTotal" class="control-label" style="font-weight: bold;">Preço Total:</label>
                <input asp-for="PrecoTotal" class="form-control" />
                <span asp-validation-for="PrecoTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar Venda" class="btn" style="background-color: #347928; color: white; font-weight: bold;" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
