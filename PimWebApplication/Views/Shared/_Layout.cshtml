<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PimWebApplication.styles.css" asp-append-version="true" />
    <style>
        /* Centraliza o título FRESH.CO */
        .brand-name {
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
            color: #347928;
        }

        /* Remove sublinhado e estilo padrão do link */
        .brand-name-link {
            text-decoration: none;
            color: inherit; /* Herda a cor do .brand-name */
        }

            /* Desativa o hover no link */
            .brand-name-link:hover,
            .brand-name-link:focus,
            .brand-name-link:active {
                text-decoration: none;
                color: inherit; /* Garante que a cor não muda no hover */
            }

        /* Para a barra de navegação, centraliza os links */
        .navbar-nav {
            justify-content: center;
            width: 100%;
        }

            .navbar-nav .nav-item {
                margin: 0 20px;
                padding-top: 0;
            }
    </style>
</head>
<body>
    <header>
        <!-- Título FRESH.CO centralizado -->
        <div class="brand-name">
            <a class="brand-name-link" asp-area="" asp-controller="Home" asp-action="Index">FRESH.CO</a>
        </div>

        <!-- Barra de navegação -->
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fornecedores" asp-action="Index">Fornecedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producao" asp-action="Index">Produção</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorios" asp-action="FiltroRelatorio">Emitir Relatório</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Trabalho desenvolvido para o PIM
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
