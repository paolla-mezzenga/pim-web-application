@model PimWebApplication.Models.Producao

@{
    ViewData["Title"] = "Detalhes da Produção";
}

<h1 style="color: #347928;">Detalhes da Produção</h1>

<div>
    <h4>Informações da Produção</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCultivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCultivo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataColheita)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataColheita)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
