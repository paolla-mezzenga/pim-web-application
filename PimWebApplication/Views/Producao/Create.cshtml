@model PimWebApplication.Models.Producao

@{
    ViewData["Title"] = "Criar Produção";
}

<h1 style="color: #347928;">Criar Produção</h1>

<h4>Producao</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label" style="font-weight: bold;">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataCultivo" class="control-label" style="font-weight: bold;">Data de Cultivo:</label>
                <input asp-for="DataCultivo" class="form-control" type="date" />
                <span asp-validation-for="DataCultivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataColheita" class="control-label" style="font-weight: bold;">Data de Colheita:</label>
                <input asp-for="DataColheita" class="form-control" type="date" />
                <span asp-validation-for="DataColheita" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Observacoes" class="control-label" style="font-weight: bold;">Observações:</label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar Produção" class="btn" style="background-color: #347928; color: white; font-weight: bold;" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
