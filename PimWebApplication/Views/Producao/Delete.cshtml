@model PimWebApplication.Models.Producao

@{
    ViewData["Title"] = "Excluir Produção";
}

<h1 style="color: #347928;">Excluir Produção</h1>

<h3>Tem certeza de que deseja excluir esta produção?</h3>
<div>
    <h4>Detalhes da Produção</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCultivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCultivo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataColheita)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataColheita)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>
