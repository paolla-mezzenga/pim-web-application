@model IEnumerable<PimWebApplication.Models.Producao>

@{
    ViewData["Title"] = "Lista de Produções";
}

<h1 style="color: #347928;">Produções</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn" style="background-color: #347928; color: white;">Adicionar Nova Produção</a>
</p>

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                <label for="Nome">Nome da Produção</label>
            </th>
            <th>
                <label for="DataCultivo">Data do Cultivo</label>
            </th>
            <th>
                <label for="DataColheita">Data da Colheita</label>
            </th>
            <th>
                <label for="Observacoes">Observações</label>
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@item.DataCultivo.ToString("dd/MM/yyyy")</td>
                <td>@item.DataColheita.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.Observacoes)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Ver Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
